@page

@model GetAllAuthorsModel

@{
    ViewBag.Title = "Исполнители";
}

<h3 class="my-4 text-center">@ViewBag.Title</h3>
<div class="mx-4">

    <table class="table table-bordered table-striped table-hover table-sm">
        <thead class="table-dark">
        <tr class="table-responsive">
            <th>ID</th>
            <th>Псевдоним</th>
            <th>ФИО</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr class="table-responsive text-start">
                <td>@author.Id</td>
                <td>@author.NickName</td>
                <td>@author.FullName</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="p-4">
    <a class="btn btn-primary" asp-page="/Authors/Create">Добавить</a>
</div>

<div class="p-4">
    <a class="btn btn-dark" asp-page="/Index">Вернуться на главную страницу</a>
</div>