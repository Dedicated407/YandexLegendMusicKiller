@page
@model CreateAuthorModel

@{
  ViewBag.Title = "Добавление исполнителя";
}

<div class="d-grid justify-content-center">
    <form method="post">
        <div class="mb-4">
            <label asp-for="Author.NickName" class="form-label">Введите свой псевдоним:</label>
            <input asp-for="Author.NickName" type="text" class="form-control" placeholder="пример: mc lubezniy" maxlength="80"/>
            <span class="text-danger small" asp-validation-for="Author.NickName"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Author.FullName" class="form-label">Введите свое ФИО (необязательно):</label>
            <input asp-for="Author.FullName" type="text" class="form-control" placeholder="пример: Цыпин Илья Павлович" maxlength="255"/>
            <span class="text-danger small" asp-validation-for="Author.FullName"></span>
        </div>
        <div class="mb-4">
            <input class="btn btn-primary w-100" type="submit" value="Добавить" />
        </div>
    </form>
</div>